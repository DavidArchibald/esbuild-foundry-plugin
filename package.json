{
    "main": "dist/index.js",
    "name": "esbuild-foundry-plugin",
    "files": [
        "dist"
    ],
    "version": "0.2.0",
    "description": "A plugin for ESBuild to make working with Foundry modules and systems easier.",
    "license": "MIT",
    "homepage": "https://github.com/DavidArchibald/esbuild-foundry-plugin/",
    "repository": {
        "type": "git",
        "url": "https://github.com/DavidArchibald/esbuild-foundry-plugin/"
    },
    "bugs": {
        "url": "https://github.com/DavidArchibald/esbuild-foundry-plugin/issues"
    },
    "type": "commonjs",
    "author": {
        "name": "David Archibald",
        "email": "david@davidarchibald.dev"
    },
    "packageManager": "yarn@3.2.0",
    "devDependencies": {
        "@commitlint/cli": "^16.2.1",
        "@commitlint/config-conventional": "^16.2.1",
        "@types/jest": "^27.4.1",
        "@types/node": "^17.0.21",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "esbuild": "^0.14.24",
        "esbuild-node-externals": "^1.4.1",
        "eslint": "^8.10.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-airbnb-typescript": "^16.1.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-jest": "^26.1.1",
        "eslint-plugin-tsdoc": "^0.2.14",
        "husky": "^7.0.4",
        "jest": "^27.5.1",
        "jest-junit": "^13.0.0",
        "jsonschema": "^1.4.0",
        "lint-staged": "^12.3.4",
        "pinst": "^3.0.0",
        "prettier": "^2.5.1",
        "ts-jest": "^27.1.3",
        "typescript": "~4.5.0"
    },
    "scripts": {
        "build": "yarn clean; node build.cjs && tsc --declaration --emitDeclarationOnly",
        "build:watch": "WATCH=true node build.cjs",
        "clean": "rm -r ./dist",
        "typecheck": "tsc --noEmit",
        "lint": "eslint --ext .ts,.js,.cjs .",
        "lint:fix": "eslint --ext .ts,.js,.cjs --fix .",
        "format": "prettier --write \"./**/*.(ts|js|cjs|json|yml|scss)\"",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:ci": "jest --ci --reporters=default --reporters=jest-junit",
        "postinstall": "husky install",
        "prepack": "pinst --disable",
        "postpack": "pinst --enable"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.(ts|js|cjs)": "eslint --fix",
        "*.(json|yml|scss)": "prettier --write"
    }
}
